<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.angus.aabelshabittracker.ToDoList"
    android:clickable="true"
    android:background="#31409f"
    android:contextClickable="false"
    android:foregroundTint="#000000">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/toDoListCheckBox"
        android:layout_above="@+id/toDoListNewButton"
        android:layout_centerHorizontal="true"
        android:background="#31409f"
        android:textColorHint="#39ff02"
        android:checked="false"
        android:allowUndo="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/toDoListDeleteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/toDoListCheckBox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:id="@+id/toDoListNewButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/toDoListCheckBox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/toDoListNextButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:id="@+id/toDoListPreviewButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toDoListDate"
        android:elegantTextHeight="false"
        android:editable="false"
        android:textSize="40dp"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:background="@color/accent_material_dark"
        android:autoText="false"
        android:inputType="date"
        android:layout_below="@+id/toDoListPreviewButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#4052b5"
        android:textColorHighlight="#de2424"
        android:singleLine="false"
        android:importantForAccessibility="yes"
        android:textColorLink="#ffffff"
        android:shadowColor="#ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toDoListPreviewButton"
        android:layout_marginTop="74dp"
        android:layout_above="@+id/toDoListCheckBox"
        android:background="@color/accent_material_dark"
        android:weightSum="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/habbitlistView"
            android:headerDividersEnabled="true"
            android:clickable="true"
            android:contextClickable="false"
            android:visibility="visible"
            android:textFilterEnabled="false" />

    </LinearLayout>

</RelativeLayout>
